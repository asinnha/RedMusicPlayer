<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4sp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="10sp"
    android:backgroundTint="#A2000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:padding="10sp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/singleTrackListCover"
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        app:shapeAppearanceOverlay="@style/cornerRadiusCard"/>

    <TextView
        android:id="@+id/songNameCard"
        android:layout_width="200sp"
        android:layout_height="30sp"
        android:layout_marginEnd="68sp"
        android:layout_marginStart="20sp"
        android:text="Rocketman"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:textColor="@color/song_name"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toEndOf="@+id/singleTrackListCover"
        app:layout_constraintTop_toTopOf="parent"
        android:singleLine="true" />


    <TextView
        android:id="@+id/artistNameCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4sp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20sp"
        android:ellipsize="marquee"
        android:singleLine="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        android:text="Elton John"
        android:textColor="@color/artist_name"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/singleTrackListCover"
        app:layout_constraintTop_toBottomOf="@+id/songNameCard" />

    <TextView
        android:id="@+id/durationTimeCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15.00"
        android:textSize="12sp"
        android:textColor="@color/song_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/singleTrackListCover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="00"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="12sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>